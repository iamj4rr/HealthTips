        <TextView
            android:id="@+id/greetings"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="31dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/hi_user"
            android:textColor="#2D384B"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/user_nama"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_nama"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="31dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#2D384B"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_profile"
            app:layout_constraintStart_toEndOf="@+id/greetings"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_profile"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="3dp"
            android:background="#ECDAC5"
            android:src="@drawable/user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/button_article2"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/rectangle_button"
        android:onClick="navigateToNextLayout"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2">

        <ImageView
            android:layout_width="275dp"
            android:layout_height="160dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/artikel" />

        <!--        <Button-->
        <!--            android:id="@+id/button_article"-->
