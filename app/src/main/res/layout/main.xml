    <LinearLayout
        android:id="@+id/button_vidio2"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/rectangle_button"
        android:onClick="navigateToNextLayout"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button_apps2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_article2">

        <ImageView
            android:layout_width="275dp"
            android:layout_height="160dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/vidio" />

        <TextView
            android:id="@+id/vidioTextView"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/vidio"
            android:textColor="#2D384B"
            android:textSize="30sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="45dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_vertical"
        android:lineSpacingExtra="-35sp"
        android:text="@string/text2"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

